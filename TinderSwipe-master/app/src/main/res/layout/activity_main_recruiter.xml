<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SeekerActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/background"
        android:columnCount="3"
        android:rowCount="1">
        <ImageView
            android:id="@+id/recownprofile"
            android:layout_height="90dp"
            android:layout_width="60dp"
            android:layout_gravity="center_horizontal|center"
            android:src="@drawable/doordash123"
            android:layout_marginLeft="15dp"
            />
        <TextView android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Jobby"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:padding="10dp"/>
        <ImageView
            android:id="@+id/chatrec"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:src="@drawable/chattin"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            />

    </GridLayout>



    <!-- activity view -->
    <FrameLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@drawable/background">


        <com.nkdroid.tinderswipe.tindercard.SwipeFlingAdapterView
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            app:rotation_degrees="15.5" />

    </FrameLayout>

</LinearLayout>



