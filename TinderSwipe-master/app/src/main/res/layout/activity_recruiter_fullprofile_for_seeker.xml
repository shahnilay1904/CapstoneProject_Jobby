<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.nkdroid.tinderswipe.RecruiterFullprofileForSeeker">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background"

            android:columnCount="3"
            android:rowCount="1">
            <ImageView
                android:id="@+id/seekerbacktomain"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/doordash123"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/jobby"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Jobby"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:gravity="center_horizontal"
                android:padding="10dp"/>
            <ImageView
                android:id="@+id/chatseek"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/chattin"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />

        </GridLayout>
        <include layout="@layout/content_recruiter_full_profile" />

    </LinearLayout>



    <!--<include layout="@layout/content_recruiter_fullprofile_for_seeker" />-->


</android.support.design.widget.CoordinatorLayout>
