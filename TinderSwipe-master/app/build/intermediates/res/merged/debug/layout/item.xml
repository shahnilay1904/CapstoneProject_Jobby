<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layout_gravity="center"
    android:layout_marginBottom="48dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="64dp">

    <FrameLayout
        android:id="@+id/background"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape2"
            android:gravity="center_horizontal"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape1"
            android:gravity="center_horizontal"
            android:orientation="vertical" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="18dp"
        android:background="@drawable/shape"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="2">

        <FrameLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.9">


            <RelativeLayout
                android:id="@+id/rwipable2rel"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cardimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/doordash123"/>
                <LinearLayout
                    android:id="@+id/rwipable3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2" android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:id="@+id/rname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Doordash"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|bottom"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:textSize="25dp"/>

                    <TextView
                        android:id="@+id/r_loc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Palo Alto, California"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|bottom"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:textSize="18dp"/>
                </LinearLayout>

            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1.1">


            <!--<LinearLayout-->
                <!--android:id="@+id/rwipable4"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="#FFF"-->
                <!--android:layout_weight="3.1">-->
                <!--<TextView-->
                    <!--android:id="@+id/r_biofield"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="Company Bio:"-->
                    <!--android:paddingLeft="10dp"-->
                    <!--android:paddingTop="5dp"-->
                    <!--android:paddingBottom="5dp"-->
                    <!--android:textSize="20dp"-->
                    <!--android:textColor="#000"/>-->

            <!--</LinearLayout>-->
            <LinearLayout
                android:background="#FFF"
                android:id="@+id/rwipable5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.9">
                <TextView
                    android:id="@+id/r_bio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="We specialize in Technology, Logistics and Delightful Delivery!"
                    android:paddingLeft="10dp"

                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:textSize="17dp"
                    android:textColor="#000"
                    android:gravity="center_horizontal|center"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/rwipable6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.6"
                android:paddingBottom="10dp"
                android:background="#FFF"
                android:weightSum="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/r_rolesfield"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Open Positions:"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"

                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_weight="0.72"/>
                <LinearLayout
                    android:id="@+id/rwipable7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.18"
                    android:paddingBottom="8dp"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/r_role1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:textColor="#000"
                        android:gravity="center_horizontal|center"
                        android:ellipsize="end"
                        android:text="Marketing Lead"
                        android:background="@drawable/jdcircle"/>
                    <TextView
                        android:id="@+id/r_role2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:gravity="center_horizontal|center"
                        android:textColor="#000"
                        android:text="Software Engineer"
                        android:ellipsize="end"
                        android:background="@drawable/jdcircle"/>
                    <TextView
                        android:id="@+id/r_role3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:gravity="center_horizontal|center"
                        android:ellipsize="end"
                        android:textColor="#000"
                        android:text="UI Designer"
                        android:background="@drawable/jdcircle"/>


                </LinearLayout>




            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/item_swipe_left_indicator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:alpha="0"

        android:background="@drawable/like" />

    <View
        android:id="@+id/item_swipe_right_indicator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:alpha="0"


        android:background="@drawable/nope" />

</FrameLayout>